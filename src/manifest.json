{
    "manifest_version": 3,
    "name": "VIDINFRA MetaView Player",
    "version": "1.1",
    "description": "Play .m3u8 URLs directly in Chrome and gather playback metrics.",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "tabs",
        "scripting",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "js/extension/background.js"
    },
    "action": {
        "default_title": "Open VIDINFRA MetaView Player Panel",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/lib/jwt_decode.bundle.min.js", "js/extension/content.js" ],
            "run_at": "document_start"
        }
    ],
    
    "web_accessible_resources": [
        {
            "resources": [
                "js/lib/hls.min.js",
                "player.html", 
                "config.html",
                "js/lib/jwt_decode.bundle.min.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
            "id": "hlsRedirectRules",
            "enabled": true,
            "path": "rules.json"
            }
        ]
    }
}